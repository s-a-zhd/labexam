<!DOCTYPE html>
<html>
<head>
	<title>Admin Home Page</title>
</head>
<body>
	<div>
		<h1>User List</h1> 		
	</div>

	<a href="/home"> Back</a> |
	<a href="/logout"> logout</a><br>

	<table border="1">
		<tr>
			<td>ID</td>
			<td>Username</td>
			<td>Password</td>
			<td>Type</td>
			<td>Action</td>
		</tr>
		<% for(var i=0; i < userlist.length; i++){ %>
		<tr>
			<td name="id"><%= userlist[i].id %></td>
			<td name="username"><%= userlist[i].username %></td>
			<td name="password"><%= userlist[i].password %></td>
			<td name="type"><%= userlist[i].type %></td>
			<td>
				<a href="/admin/edit/<%= userlist[i].id %>">EDIT</a> | 
				<a href="/home/delete/<%= userlist[i].id %>">DELETE</a>  
            </td>
            
        </tr>
        
		<% } %>
    </table>
    <a href="/admin/add">Add user</a>
</body>
</html>